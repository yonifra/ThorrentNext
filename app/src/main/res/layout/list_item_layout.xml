<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/item_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Movie Title" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="269dp"
        android:layout_height="82dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_title"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam ultricies varius turpis id vulputate. Phasellus dignissim, enim nec tincidunt iaculis, nibh felis accumsan dui, non vulputate magna quam vel justo. Phasellus in sem efficitur, vulputate sapien feugiat, aliquet erat. Etiam vehicula sollicitudin justo vel blandit. Vivamus at felis sit amet libero rhoncus mollis at vitae tortor." />

    <TextView
        android:id="@+id/year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/item_description"
        app:layout_constraintStart_toEndOf="@+id/item_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="(2018)" />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="67dp"
        android:layout_height="106dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorPrimary" />
</android.support.constraint.ConstraintLayout>